{
  "expo": {
    "name": "EcoCiclo",
    "slug": "ecociclo-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./EcoCicloMobile/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./EcoCicloMobile/assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for recyclable item verification.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to let you select images for recyclable items."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./EcoCicloMobile/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./EcoCicloMobile/assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-image-picker"
    ]
  }
}